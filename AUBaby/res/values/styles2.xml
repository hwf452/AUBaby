<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ImageViewEnterUpStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/portrait3</item>
    </style>
    
    <style name="ImageViewEnterDownStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/portrait2</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="ButtonBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:onClick">backButton</item>
        <item name="android:background">@drawable/btn03_selector</item>
    </style>
    
    <style name="ButtonSeekStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/btn06_selector</item>
        <item name="android:layout_marginRight">@dimen/view_small_margin</item>
    </style>
    
    <style name="ButtonEnterTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_enter_text_size</item>
    </style>
    
    <style name="EditTextEnterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/enter_view_sides_margin</item>
        <item name="android:layout_marginRight">@dimen/enter_view_sides_margin</item>
        <item name="android:paddingLeft">@dimen/edittext_sides_padding</item>
        <item name="android:paddingRight">@dimen/edittext_sides_padding</item>
        <item name="android:background">@drawable/list1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/edittext_enter_text_size</item>
        <item name="android:maxLength">20</item>
        
    </style>
    
    <style name="ButtonEnterRedStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/enter_view_sides_margin</item>
        <item name="android:layout_marginRight">@dimen/enter_view_sides_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_enter_text_size</item>
       	<item name="android:background">@drawable/btn04_selector</item>
    </style>
    
    <style name="CheckBoxEnterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black3</item>
        <item name="android:textSize">@dimen/checkbox_enter_text_size</item>
        <item name="android:button">@drawable/btn05_selector</item>
    </style>
    
    <style name="TextViewTab5Notice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black4</item>
        <item name="android:textSize">@dimen/textview_tab5_notice_replay_size</item>
    </style>
</resources>
