<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HorizontalPaddingstyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginTop="@dimen/space1"
    android:background="@drawable/list26"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/nameTxt"
        style="@style/tv_tab_listtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/user_shuoshuo_textsize1" />

    <TextView
        android:id="@+id/remarkTxt"
        style="@style/tv_tab_listtv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1000"
        android:textSize="@dimen/user_shuoshuo_textsize1" />

    <TextView
        android:id="@+id/dateTextView"
        style="@style/tv_tab_listtv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="@dimen/user_shuoshuo_textsize1" />

</LinearLayout>