<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/HorizontalPaddingstyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list22"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/headImg"
            android:layout_width="@dimen/user_little_head_width_height"
            android:layout_height="@dimen/user_little_head_width_height"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/black4" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_padding"
        android:layout_weight="1000"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/signInTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:textColor="@color/black4"
            android:textSize="@dimen/uesr_send_textsize" />

        <TextView
            android:id="@+id/signOutTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/signInTextView"
            android:gravity="center_vertical"
            android:textColor="@color/black4"
            android:textSize="@dimen/uesr_send_textsize" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/btn13_selector"
        android:gravity="center"
        android:text="@string/sign_in"
        android:textColor="@color/txt1_selector"
        android:textSize="@dimen/user_name_textsize1"
        android:id="@+id/signBtn" 
        android:padding="@dimen/grid_item_space"/>

</LinearLayout>