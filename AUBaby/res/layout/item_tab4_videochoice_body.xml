<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/icon_015"
        android:drawablePadding="@dimen/view_smallsmall_margin"
        android:drawableRight="@drawable/icon_016"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/view_small_padding"
        android:text="圣诞节"
        android:textColor="@color/red5"
        android:textSize="@dimen/textview_tab4_video_type_size" />

    <com.halong.aubaby.widget.NoScrollGridView
        android:id="@+id/tab4VidoeGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="@dimen/view_smallsmall_margin"
        android:numColumns="2"
        android:clickable="false"
        android:listSelector="@android:color/transparent"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/view_smallsmall_margin" />

</LinearLayout>