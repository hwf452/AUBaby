<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list23"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/videoChoiceImageButton"
            android:layout_width="131dp"
            android:layout_height="75dp"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/portrait28" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/btn56_selector" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_017"
            android:gravity="center_vertical"
            android:text="123"
            android:textColor="@color/gray3"
            android:textSize="@dimen/textview_tab4_video_num_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_smallsmallsmall_margin"
            android:drawableLeft="@drawable/icon_018"
            android:gravity="center_vertical"
            android:text="123"
            android:textColor="@color/gray3"
            android:textSize="@dimen/textview_tab4_video_num_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_smallsmallsmall_margin"
            android:drawableLeft="@drawable/icon_019"
            android:gravity="center_vertical"
            android:text="123"
            android:textColor="@color/gray3"
            android:textSize="@dimen/textview_tab4_video_num_size" />
    </LinearLayout>

</LinearLayout>