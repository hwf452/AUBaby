<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list22"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="@dimen/user_little_head_width_height"
        android:layout_height="@dimen/user_little_head_width_height"
        android:layout_marginRight="@dimen/space1"
        android:layout_marginTop="@dimen/space1" >

        <ImageButton
            android:id="@+id/imageview"
            android:layout_width="@dimen/user_little_head_width_height"
            android:layout_height="@dimen/user_little_head_width_height"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/head" />

        <ImageView
            android:id="@+id/tecImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/icon_tec_l"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dateImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1000"
                android:singleLine="true"
                android:textColor="@color/bule2" />

            <ImageView
                android:id="@+id/statusImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/view_smallsmallsmall_margin"
                android:layout_marginTop="@dimen/view_smallsmallsmall_margin"
                android:background="@drawable/icon_025"
                android:contentDescription="@null"
                android:layout_gravity="top|right" />

            <TextView
                android:id="@+id/commentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/view_smallsmall_margin"
                android:drawableLeft="@drawable/icon_028"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/red2" />
        </LinearLayout>

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:textColor="@color/black3" />
    </LinearLayout>

</LinearLayout>